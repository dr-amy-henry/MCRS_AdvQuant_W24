#plant height by species
mean_shrub_height |>
ggplot() +
  aes(x = Species, y = mean_height, fill = Species) +
  geom_col(position = position_dodge()) +
  geom_errorbar(aes(ymin = mean_height - se_height,
                    ymax = mean_height + se_height),
                position = position_dodge(0.9),
                width = 0.1)

